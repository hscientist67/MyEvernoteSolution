@model MyEvernote.Entities.EvernoteUser

@{
    ViewBag.Title = "Kullanıcı Detay";
}

<link href="~/Content/validation-error.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-1">
            <h4>@ViewBag.Title</h4>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-horizontal">
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.Name) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.Surname) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.Surname)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.Username) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.Username)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.Email) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.Password) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.Password)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.ProfileImageFileName) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.ProfileImageFileName)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.IsActive) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.IsActive)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.IsAdmin) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.IsAdmin)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.CreatedOn) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.ModifiedOn) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label"><b>@Html.DisplayNameFor(model => model.ModifiedUsername) : </b></label>
                    <div class="col-md-9" style="vertical-align:middle;margin:auto">
                        @Html.DisplayFor(model => model.ModifiedUsername)
                    </div>
                </div>
            </div>
            <div class="form-group row">
                @Bootstrap.LinkButton("/User/Index", "outline-secondary", "col-md-3 btn-sm", string.Empty, "arrow-left", " Geri Dön")
                <div class="col-md-6">
                    @Bootstrap.LinkButton("/User/Edit/" + Model.Id, "info", "btn-sm", string.Empty, string.Empty, " Düzenle")
                </div>
            </div>
        </div>
    </div>
</div>
