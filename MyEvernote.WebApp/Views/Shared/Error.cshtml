@using MyEvernote.Entities.Messages
@using MyEvernote.WebApp.ViewModels
@model ErrorViewModel

<html>
<head>
    <link href="~/Content/login-register.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>
<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading">@Model.Header</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="text-danger">
                    <h4><span class="fas fa-times"></span>   @Model.Title</h4>
                    <hr />
                    <p class="text-justify">
                        @foreach (ErrorMessageObj msg in Model.items)
                        {
                            @msg.Message<br />
                        }
                    </p>
                </div>
            </div>
        </div>
        @{
            string js = string.Empty;

            if (Model.IsRedirecting)
            {
                js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "';}," + Model.RedirectingTimeOut + ");";
            }
        }
        <!-- Burada js kodu html.raw ile eklendiğinde tırnak işaretleri kaybolmaz aynen eklenir. Aksi halde "@js"  diye eklenemez.-->
        <script>

            $(function () {

               @Html.Raw(js);
            })
        </script>
    </div>
</body>
</html>



@section footer{
    @Html.Partial("_PartialFooter");
}