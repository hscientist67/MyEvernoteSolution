@using MyEvernote.BusinessLayer
@using MyEvernote.Entities
@using MyEvernote.WebApp.Models

@{
    List<Category> list = CacheHelper.GetCategoriesFromCache();
}


<h2 class="my-4"> Kategoriler</h2>
<div class="list-group">
    <a href="/Home/Index" class="list-group-item" style="color:black; font-weight:bold"> Tümü</a>
    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item" style="color:black"> @cat.Title </a>

    }
</div>
