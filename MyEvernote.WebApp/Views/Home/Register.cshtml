@using MyEvernote.Entities.ValueObjects
@model RegisterViewModel

<html>
<head>
    <link href="~/Content/login-register.css" rel="stylesheet" />
    <link href="~/Content/validation-error.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

</head>

<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading">Kayıt Formu</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>Admin Login</h2>
                </div>
                @Html.ValidationSummary(false)
                @using (Html.BeginForm())
                {
                    <form id="Register">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Kullanıcı Adınız" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email Adresiniz" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Şifre", @type = "password" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", @placeholder = "Şifre Tekrar", @type = "password" })
                        </div>
                        <div class="forgot">
                            <a href="reset.html">Şifreni mi unuttun?</a>
                        </div>
                        <button type="submit" class="btn btn-primary">Kayıt</button>

                    </form>
                }
            </div>
            <p class="botto-text"> Designed by Sunil Rajput</p>
        </div>
    </div>
</body>
</html>

@section footer{
    @Html.Partial("_PartialFooter");
}


