@using MyEvernote.Entities
@model EvernoteUser
@{
    ViewBag.Title = "Profil Düzenle";
}

<link href="~/Content/validation-error.css" rel="stylesheet" />

<div class="container"  style="height:500px">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row" >
        @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-md-12" }))
        {
            <div class="form-row">
                <div class="col-md-3">
                    <img src="~/images/@Model.ProfileImageFileName" class="img-circle" width="128" height="128" />
                    @Html.HiddenFor(model => model.ProfileImageFileName)
                    <br /><br />
                    <input type="file" name="ProfileImage" id="ProfileImage" class="form-control" /><br />
                    <span class="fas fa-info"></span>
                    <span><i>Lütfen jpg, jpeg ya da png formatlı dosya seçiniz.</i></span>
                </div>
                <div class="col-md-6 offset-1">
                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-3", @style = "font-weight: bold;" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3", @style = "font-weight: bold;" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3", @style = "font-weight: bold;" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-3", @style = "font-weight: bold;" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3", @style = "font-weight: bold;" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        </div>
                    </div>

                    <div class="form-group row text-right">
                        <div class="col-md-12">
                            <input type="submit" value="Kaydet" class="btn btn-success" />

                            @Html.ActionLink("İptal", "ShowProfile", "Home", null, new { @class = "btn btn-secondary", @style = "font-weight: bold;" })
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        }
    </div>
</div>


@section footer{
    @Html.Partial("_PartialFooter");
}

