@using MyEvernote.Entities.ValueObjects
@model LoginViewModel

<html>
<head>
    <link href="~/Content/login-register.css" rel="stylesheet" />
    <link href="~/Content/validation-error.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

</head>


<body id="LoginForm">
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>Giriş Formu</h2>
                    <p>Lütfen kullanıcı adı ve şifrenizi giriniz.</p>
                </div>
                @Html.ValidationSummary(false)
                @if (ViewBag.SetLink != null)
                {
                    <a href="@ViewBag.SetLink" class="btn btn-primary">Activate</a>
                }
                @using (Html.BeginForm())
                {
                    <form id="Login">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Şifre", @type = "password" })
                        </div>
                        <div class="forgot">
                            <a href="reset.html">Şifreni mi unuttun?</a>
                        </div>
                        <button type="submit" class="btn btn-primary">Giriş </button>

                    </form>
                }
            </div>
            <p class="botto-text"> Designed by Sunil Rajput</p>
        </div>
    </div>
</body>
</html>


