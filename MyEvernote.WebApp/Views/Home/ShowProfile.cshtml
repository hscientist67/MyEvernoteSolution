@using MyEvernote.Entities
@model EvernoteUser
@{
    ViewBag.Title = "Profilim";
}

<div class="container" style="height:500px">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
    <div>
        <div class="row">
            <div class="col-md-2">
                <img src="~/images/@Model.ProfileImageFileName" class="img-circle" width="128" height="128" />
            </div>
            <div class="col-md-8">
                <h3>@(Model.Name + " " + Model.Surname)</h3>
                <br />
                <h6><b>@Html.DisplayNameFor(model => model.Username) : </b>@Model.Username</h6>
                <h6><b>@Html.DisplayNameFor(model => model.Email) : </b>@Model.Email</h6>
                <br />
                <h6><a href="/Home/EditProfile">More...</a></h6>
            </div>
            <div class="col-md-2 text-right">

                <a href="@Url.Action("DeleteProfile")" class="btn btn-danger" onclick="return confirm('Bu hesabı silmek istediğinizden emin misiniz?');">
                    <span class="fas fa-trash-alt"></span>  Hesabı Kaldır
                </a>

            </div>
        </div>
    </div>
</div>


@section footer{
    @Html.Partial("_PartialFooter");
}

